<% if flash[:notice2] %>
      <div class="flash">
        <%= flash[:notice2] %>
      </div>
    <% end %>

<h1>Books</h1>

<table>
<tr>
<th>Title</th>
<th>Body</th>
</tr>
<% @books.each do |book| %>
<tr>
  <td><%= book.title %></td>
  <td><%= book.body %></td>
  <td><%= link_to 'Show', book_path(book) %></td>
  <td><%= link_to 'Edit', edit_book_path(book) %></td>
  <td><%= link_to 'Destroy', book_path(book), method: :delete,"data-confirm" => "Are you sure?" %>
  </td>
</tr>
  <% end %>
  </table>
  
<h2>New book</h2>
<%= form_for(@book) do |f| %>
  <% if @book.errors.any? %>
<div id="error_explanation" class="alert">
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
</div>
<% end %>
<div class="field"<label>Title</label><br>
<%= f.text_field :title %></div>
<div class="field"><label>Body</label><br>
<%= f.text_area :body %></div>
<%= f.submit 'Create Book' %>

<% end %>
